{
  "name": "nip64",
  "version": "0.0.1",
  "homepage": ".",
  "private": true,
  "scripts": {
    "start": "REACT_APP_VERSION=$npm_package_version REACT_APP_DEV_MODE=true react-scripts start",
    "build": "REACT_APP_VERSION=$npm_package_version react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "prettier --check --no-error-on-unmatched-pattern 'src/**/*.{ts,tsx,json,css,md}'",
    "format": "prettier --write --no-error-on-unmatched-pattern 'src/**/*.{ts,tsx,json,css,md}'",
    "regtest:clear": "docker-compose --file docker/regtest/docker-compose.yml down --volumes --remove-orphans",
    "regtest:up": "docker-compose --file docker/regtest/docker-compose.yml up",
    "regtest:down": "docker-compose --file docker/regtest/docker-compose.yml down",
    "regtest:pull": "npm run regtest:clear && docker-compose --file docker/regtest/docker-compose.yml pull"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "@nostr-dev-kit/ndk": "^2.3.0",
    "@nostr-dev-kit/ndk-react": "^0.1.1",
    "classnames": "^2.3.2",
    "react": "^18.2.0",
    "react-daisyui": "^5.0.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.3.6"
  }
}
